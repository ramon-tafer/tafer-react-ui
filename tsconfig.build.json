{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,

    "outDir": "dist",
    "rootDir": "src",

    "jsx": "react-jsx",
    "strict": true,
    "verbatimModuleSyntax": true,

    "types": []
  },
  "include": ["src"],
  "exclude": [
    "src/stories",
    "**/*.stories.*",
    "**/*.test.*"
  ]
}
